<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox fx:id="root" alignment="CENTER" spacing="20"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.homepage.HomeController"
      stylesheets="@light.css"
      prefWidth="1200" prefHeight="800"
      styleClass="root">
    
    <!-- Header with Logo and Theme Toggle -->
    <HBox alignment="CENTER" spacing="20">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        
        <!-- Left side with logo -->
        <ImageView fx:id="logoImage" fitHeight="40" fitWidth="40" styleClass="logo"/>
        <Label text="11:45, Fri Sep 5" styleClass="time-label"/>
        
        <!-- Spacer -->
        <Region HBox.hgrow="ALWAYS"/>
        
        <!-- Right side with theme toggle -->
        <Button fx:id="themeToggleButton" text="CHANGE THEME" styleClass="theme-toggle"/>
    </HBox>
    
    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="50">
        <!-- Title and Subtitle Container -->
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets bottom="30"/>
            </padding>
            <Label text="Comm-Uni-Cate" styleClass="title"/>
            <Label text="Software Engineering Project by" styleClass="subtitle"/>
            <Label text="Batch B22" styleClass="subtitle"/>
        </VBox>
        
        <!-- Meeting Buttons -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="newMeetingButton" text="New meeting" styleClass="meeting-button"/>
            <TextField promptText="Enter meeting code" styleClass="meeting-code"/>
            <Button fx:id="joinMeetingButton" text="Join" styleClass="join-button"/>
        </HBox>
    </VBox>
</VBox>
