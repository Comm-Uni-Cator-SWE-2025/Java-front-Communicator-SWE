    <!-- This view naturally depends on many Swing components for UI rendering -->
    <suppress checks="ClassDataAbstractionCoupling|ClassFanOutComplexity" 
              files=".*MainPage\.java"/>
    
    <!-- Suppress JavaNCSS for complex UI methods -->
    <suppress checks="JavaNCSS" 
              files=".*ParticipantPanel\.java"
              lines="186"/>
    <suppress checks="JavaNCSS" 
              files=".*MainPage\.java"
              lines="245"/>
    <suppress checks="JavaNCSS" 
              files=".*ScreenNVideo\.java"
              lines="182"/>
    <suppress checks="JavaNCSS" 
              files=".*MeetingControlButton\.java"/>
</suppressions>
