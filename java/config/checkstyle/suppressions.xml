<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">
<suppressions>
    <!-- Suppress CyclomaticComplexity for serialization classes -->
    <!-- These classes have complex deserialization logic with switch statements -->
    <suppress checks="CyclomaticComplexity" 
              files=".*[\\/]canvas[\\/]datamodel[\\/]serialization[\\/]ShapeSerializer\.java"/>
    <suppress checks="CyclomaticComplexity" 
              files=".*[\\/]canvas[\\/]datamodel[\\/]serialization[\\/]NetActionSerializer\.java"/>
    
    <!-- Suppress ClassDataAbstractionCoupling for ShapeSerializer -->
    <!-- This serializer naturally depends on all shape types -->
    <suppress checks="ClassDataAbstractionCoupling" 
              files=".*[\\/]canvas[\\/]datamodel[\\/]serialization[\\/]ShapeSerializer\.java"/>
    
    <!-- Suppress ClassFanOutComplexity for CanvasController -->
    <!-- This controller naturally depends on many JavaFX and canvas components -->
    <suppress checks="ClassFanOutComplexity" 
              files=".*CanvasController\.java"/>
    
    <!-- Suppress ClassDataAbstractionCoupling for ScreenVideoTelemetryViewModel -->
    <!-- This ViewModel naturally depends on many JavaFX property types for UI binding -->
    <suppress checks="ClassDataAbstractionCoupling" 
              files=".*[\\/]viewmodels[\\/]ScreenVideoTelemetryViewModel\.java"/>
    
    <!-- Suppress ParameterNumber for ChatViewModel.handleIncomingMessage -->
    <!-- This method legitimately needs 9 parameters to handle all message types -->
    <suppress checks="ParameterNumber" 
              files=".*[\\/]viewmodels[\\/]ChatViewModel\.java"/>
    
    <!-- Suppress ClassDataAbstractionCoupling and ClassFanOutComplexity for SentimentViewPane -->
    <!-- This view naturally depends on many JavaFX components for UI rendering -->
    <suppress checks="ClassDataAbstractionCoupling" 
              files=".*SentimentViewPane\.java"/>
    <suppress checks="ClassFanOutComplexity" 
              files=".*SentimentViewPane\.java"/>
    <suppress checks="JavaNCSS" 
              files=".*SentimentViewPane\.java"/>
    
    <!-- Suppress ClassDataAbstractionCoupling and ClassFanOutComplexity for ChatView -->
    <!-- This view naturally depends on many Swing components for UI rendering -->
    <suppress checks="ClassDataAbstractionCoupling" 
              files=".*ChatView\.java"/>
    <suppress checks="ClassFanOutComplexity" 
              files=".*ChatView\.java"/>
    <suppress checks="JavaNCSS" 
              files=".*ChatView\.java"/>
    
    <!-- Suppress ClassDataAbstractionCoupling and ClassFanOutComplexity for App -->
    <!-- This main application class naturally depends on many components for coordination -->
    <suppress checks="ClassDataAbstractionCoupling" 
              files=".*[\\/]ux[\\/]App\.java"/>
    <suppress checks="ClassFanOutComplexity" 
              files=".*[\\/]ux[\\/]App\.java"/>
    
    <!-- Suppress ClassDataAbstractionCoupling for LoginPage -->
    <!-- This view naturally depends on many Swing components for UI rendering -->
    <suppress checks="ClassDataAbstractionCoupling" 
              files=".*[\\/]views[\\/]LoginPage\.java"/>
    
    <!-- Suppress ClassDataAbstractionCoupling for ScreenVideoTelemetryView -->
    <!-- This view naturally depends on many JavaFX components for UI rendering -->
    <suppress checks="ClassDataAbstractionCoupling" 
              files=".*[\\/]views[\\/]ScreenVideoTelemetryView\.java"/>
    
    <!-- Suppress ParameterNumber for ModernTabbedPaneUI override methods -->
    <!-- These methods override BasicTabbedPaneUI methods and cannot have their signatures changed -->
    <suppress checks="ParameterNumber" 
              files=".*ModernTabbedPaneUI\.java"/>
    
    <!-- Suppress ClassDataAbstractionCoupling and ClassFanOutComplexity for MeetingPage -->
    <!-- This view naturally depends on many Swing components for UI rendering -->
    <suppress checks="ClassDataAbstractionCoupling" 
              files=".*[\\/]views[\\/]MeetingPage\.java"/>
    <suppress checks="ClassFanOutComplexity" 
              files=".*[\\/]views[\\/]MeetingPage\.java"/>
    
    <!-- Suppress ClassDataAbstractionCoupling for QuickDoubtPopup -->
    <!-- This popup naturally depends on many Swing components for UI rendering -->
    <suppress checks="ClassDataAbstractionCoupling" 
              files=".*QuickDoubtPopup\.java"/>
</suppressions>
